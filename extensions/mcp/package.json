{
  "name": "@podman-desktop/extension-mcp",
  "version": "0.1.0",
  "description": "MCP Server Manager Extension for Podman Desktop",
  "type": "module",
  "main": "./dist/extension.js",
  "engines": {
    "podman-desktop": "^0.0.1"
  },
  "scripts": {
    "build": "vite build && node scripts/build.js",
    "watch": "vite build --watch",
    "test": "jest",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.18.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@podman-desktop/api": "workspace:*",
    "svelte": "^4.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.0",
    "@jest/globals": "^29.7.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tsconfig/svelte": "^5.0.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.17.16",
    "adm-zip": "^0.5.16",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "svelte-check": "^3.6.0",
    "svelte-preprocess": "^5.1.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true,
          "isolatedModules": true
        }
      ]
    },
    "moduleNameMapper": {
      "^@podman-desktop/api$": "<rootDir>/src/test/mocks/podman-desktop-api.ts",
      "^@modelcontextprotocol/sdk$": "<rootDir>/src/test/mocks/modelcontextprotocol-sdk.ts"
    },
    "setupFilesAfterEnv": ["<rootDir>/src/test/setup.ts"],
    "testMatch": ["**/__tests__/**/*.spec.ts"],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  }
}
