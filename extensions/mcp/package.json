{
  "name": "@podman-desktop/extension-mcp",
  "displayName": "MCP Server Manager",
  "description": "MCP server management capabilities for Podman Desktop",
  "version": "0.1.0",
  "publisher": "podman-desktop",
  "license": "Apache-2.0",
  "engines": {
    "podman-desktop": "^1.0.0"
  },
  "main": "./dist/extension.js",
  "source": "./src/extension.ts",
  "scripts": {
    "build": "vite build",
    "watch": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "eslint src/ --ext .ts,.tsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@anthropic-ai/sdk": "^0.10.0"
  },
  "devDependencies": {
    "@podman-desktop/api": "^1.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "mcp.setAnthropicApiKey",
        "title": "Set Anthropic API Key",
        "category": "MCP"
      },
      {
        "command": "mcp.addServer",
        "title": "Add MCP Server",
        "category": "MCP"
      },
      {
        "command": "mcp.removeServer",
        "title": "Remove MCP Server",
        "category": "MCP"
      },
      {
        "command": "mcp.startServer",
        "title": "Start MCP Server",
        "category": "MCP"
      },
      {
        "command": "mcp.stopServer",
        "title": "Stop MCP Server",
        "category": "MCP"
      },
      {
        "command": "mcp.listServers",
        "title": "List MCP Servers",
        "category": "MCP"
      },
      {
        "command": "mcp.getServerStatus",
        "title": "Get MCP Server Status",
        "category": "MCP"
      }
    ],
    "configuration": {
      "title": "MCP Server Manager",
      "properties": {
        "mcp.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic API key for MCP server interactions"
        },
        "mcp.defaultServerConfig": {
          "type": "object",
          "default": {
            "command": "mcp-server",
            "args": []
          },
          "description": "Default configuration for new MCP servers"
        }
      }
    }
  }
}
