{
  "name": "@podman-desktop/mcp",
  "version": "0.1.0",
  "displayName": "Model Context Protocol Client",
  "description": "MCP client extension for Podman Desktop",
  "publisher": "podman-desktop",
  "license": "Apache-2.0",
  "icon": "icon.png",
  "categories": ["Other"],
  "main": "./dist/extension.js",
  "source": "./src/extension.ts",
  "extensionDependencies": [],
  "contributes": {
    "configuration": {
      "title": "MCP Client",
      "properties": {
        "mcp.serverAddress": {
          "type": "string",
          "default": "localhost",
          "description": "MCP server address"
        },
        "mcp.serverPort": {
          "type": "number",
          "default": 3001,
          "description": "MCP server port"
        }
      }
    },
    "views": {
      "dashboard": [
        {
          "id": "mcp-client",
          "title": "MCP Client",
          "icon": "$(tools)"
        }
      ]
    },
    "menus": {
      "dashboard/image": [
        {
          "command": "mcp-client.viewResources",
          "title": "View MCP Resources"
        }
      ]
    }
  }
}
